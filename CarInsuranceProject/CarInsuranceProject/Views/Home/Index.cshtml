<div class="row no-guters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h3 class="m-0">Sign up for car insurance</h3>
        </div>
        <div class="card-body">
                @using (Html.BeginForm("SignUp", "Home", FormMethod.Post))
                {
            <div class="row">
                <div class="form-group col-md-12">
                    <input name="firstName" type="text" class="form-control" placeholder="First Name" required />
                </div>
                <div class="form-group col-md-12">
                    <input name="lastName" type="text" class="form-control" placeholder="Last Name" required />
                </div>
                <div class="form-group col-md-12">
                    <input name="emailAddress" type="email" class="form-control" placeholder="Email Address" required />
                </div>
                <div class="form-group col-md-12">
                    <input name="getYear" type="text" class="form-control" placeholder="Car Year (Please enter number)" required />
                </div>
                <div class="form-group col-md-12">
                    <input name="getBrand" type="text" class="form-control" placeholder="Car Brand" required />
                </div>
                <div class="form-group col-md-12">
                    <input name="getModel" type="text" class="form-control" placeholder="Car Model" required />
                </div>
                <div class="form-group col-md-12">
                    <input name="getPlate" type="text" class="form-control" placeholder="License Plate" required />
                </div>
                <div class="form-group col-md-12">
                    <input name="bMonth" type="text" class="form-control" placeholder="Birth Month (Please enter 1-Jan 2-Feb 3-Mar)" required />
                </div>
                <div class="form-group col-md-12">
                    <input name="bDay" type="text" class="form-control" placeholder="Birth Day" required />
                </div>
                <div class="form-group col-md-12">
                    <input name="bYear" type="text" class="form-control" placeholder="Birth Year" required />
                </div>
                <div class="form-group col-md-12">
                    <input name="Luxury" type="text" class="form-control" placeholder="Is this a luxury car?" required />
                </div>
                <div class="form-group col-md-12">
                    <input name="Dui" type="text" class="form-control" placeholder="Do you have a DUI? (Y-Yes, N-No)" required />
                </div>
                <div class="form-group col-md-12">
                    <input name="numTickets" type="text" class="form-control" placeholder="How many tickets do you have? (0 for None)" required />
                </div>
                <div class="form-group col-md-12">
                    <input name="coverage" type="text" class="form-control" placeholder="Do you want insurance coverage?(Y-Yes, N-No) " required />
                </div>
                <button type="submit" class="btn btn-block btn-primary">Submit</button>
            </div>
                }
        </div>
    </div>
</div>